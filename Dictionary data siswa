# Inisialisasi dictionary untuk menyimpan data siswa
data_siswa = {}

# Jumlah siswa yang ingin dimasukkan
jumlah_siswa = int(input("Masukkan jumlah siswa: "))

# Loop untuk mengisi dictionary
for i in range(jumlah_siswa):
    # Meminta input nama siswa
    nama = input(f"Masukkan nama siswa ke-{i + 1}: ")
    # Meminta input nilai siswa
    nilai = float(input(f"Masukkan nilai siswa ke-{i + 1}: "))
    
    # Menyimpan data siswa ke dalam dictionary
    data_siswa[nama] = nilai

# Menampilkan data siswa yang telah dimasukkan
print("\nData Siswa:")
for nama, nilai in data_siswa.items():
    print(f"Nama: {nama}, Nilai: {nilai}")
